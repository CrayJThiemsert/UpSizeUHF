<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/epctag_layout"
    android:orientation="vertical"
    android:background="@drawable/layout_border_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/epc_header_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="@color/colorOrangeGrey"
                android:textFontWeight="500"
                android:fontFamily="@font/kanit_medium" />
            <TextView
                android:id="@+id/epc_run_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                android:textSize="22sp"
                android:gravity="end"
                android:textColor="@color/colorWhite"
                android:textFontWeight="600"
                android:textStyle="bold"
                android:fontFamily="@font/kanit_semibold" />

        </LinearLayout>
        <TextView
            android:id="@+id/rssi_textview"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingBottom="4dp"
            android:text="@string/rssi"
            android:layout_gravity="bottom"
            android:textColor="@color/colorOrangeGrey"/>

    </LinearLayout>


</LinearLayout>