<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_code_layout"
    android:orientation="vertical"
    android:background="@drawable/layout_border_radius">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Space
            android:layout_width="50dp"
            android:layout_height="15dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/code_textview"
                android:layout_weight="0.25"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="code"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/type_textview"
                android:layout_weight="0.25"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="type"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/size_textview"
                android:layout_weight="0.25"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="size"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/number_textview"
                android:layout_weight="0.25"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="number"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/current_box_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Storage Box by Cray"
            android:layout_gravity="bottom"
            android:textColor="@color/colorOrangeGrey"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/epc_header_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="@color/colorOrangeGrey"
                android:textFontWeight="500"
                android:fontFamily="@font/kanit_medium" />
            <TextView
                android:id="@+id/epc_run_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                android:textSize="22sp"
                android:gravity="end"
                android:textColor="@color/colorWhite"
                android:textFontWeight="600"
                android:textStyle="bold"
                android:fontFamily="@font/kanit_semibold" />

        </LinearLayout>
        <Space
            android:layout_width="55dp"
            android:layout_height="15dp" />
    </LinearLayout>


</LinearLayout>