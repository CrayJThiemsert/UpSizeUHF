<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_info_layout"
    android:orientation="vertical"
    android:background="@drawable/layout_border_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/actor"
            android:textSize="10sp"
            android:textColor="@color/colorOrangeGrey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actor_textview"
                android:layout_weight="0.25"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="@string/actor"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="@string/actscene"
            android:textSize="10sp"
            android:textColor="@color/colorOrangeGrey"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actscene_textview"
                android:layout_weight="0.25"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:text="@string/actscene"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPC -->"
            android:textColor="@color/colorOrangeGrey"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/epc_header_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="@color/colorOrangeGrey"
                android:textFontWeight="500"
                android:fontFamily="@font/kanit_medium" />
            <TextView
                android:id="@+id/epc_run_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                android:textSize="22sp"
                android:gravity="end"
                android:textColor="@color/colorWhite"
                android:textFontWeight="600"
                android:textStyle="bold"
                android:fontFamily="@font/kanit_semibold" />

        </LinearLayout>
        <Space
            android:layout_width="55dp"
            android:layout_height="15dp" />
    </LinearLayout>


</LinearLayout>